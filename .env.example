# Environment variables for Social Sync
# Copy this file to .env and fill in your credentials

# Bluesky Credentials
BLUESKY_HANDLE=your-handle.bsky.social
BLUESKY_PASSWORD=your-app-password

# Mastodon Credentials
MASTODON_API_BASE_URL=https://mastodon.social
MASTODON_ACCESS_TOKEN=your-access-token

# Sync Configuration
SYNC_INTERVAL_MINUTES=60
MAX_POSTS_PER_SYNC=10
# Start date for syncing posts (ISO format). If not set, starts from 7 days ago
# Examples: 
#   SYNC_START_DATE=2025-01-01                    # Start from beginning of day UTC
#   SYNC_START_DATE=2025-01-15T10:30:00           # Specific datetime (assumes UTC)
#   SYNC_START_DATE=2025-01-15T10:30:00-05:00     # Specific datetime with timezone
# SYNC_START_DATE=2025-01-01
DRY_RUN=true
# Disable adding source platform attribution (e.g., "via Bluesky ðŸ¦‹") to synced posts
# DISABLE_SOURCE_PLATFORM=false

# Logging
LOG_LEVEL=INFO
